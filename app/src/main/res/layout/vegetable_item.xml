<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_left_cabbage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vegetable_cabbage"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true"/>

        <TextView
            android:id="@+id/name_left_cabbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabbage"
            android:fontFamily="@font/bodoni_moda_extrabold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_right_carrot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vegetable_carrot"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true"/>

        <TextView
            android:id="@+id/name_right_carrot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrot"
            android:fontFamily="@font/bodoni_moda_extrabold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>


